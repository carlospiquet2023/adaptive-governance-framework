# üîß ADAPTIVE GOVERNANCE FRAMEWORK - ENVIRONMENT CONFIGURATION

# =============================================================================
# üöÄ APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =============================================================================  
# üíæ DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://governance:governance@localhost:5432/governance
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=governance
DATABASE_USER=governance
DATABASE_PASSWORD=governance
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# PostgreSQL (Docker)
POSTGRES_USER=governance
POSTGRES_PASSWORD=governance
POSTGRES_DB=governance

# =============================================================================
# üî¥ REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=governance:
REDIS_TTL_DEFAULT=3600

# =============================================================================
# üîê SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ENCRYPTION_KEY=your-32-byte-encryption-key-here-exactly-32-chars
BCRYPT_ROUNDS=12

# =============================================================================
# üìä LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=30
LOG_MAX_SIZE=20m
LOG_DATE_PATTERN=YYYY-MM-DD
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true
ENABLE_ERROR_LOG=true

# =============================================================================
# üìà METRICS & TELEMETRY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
TELEMETRY_INTERVAL=30000
SYSTEM_METRICS_ENABLED=true

# =============================================================================
# üß† MACHINE LEARNING SETTINGS
# =============================================================================
ENABLE_LEARNING_ENGINE=true
ML_MODEL_TRAINING_INTERVAL=24h
ML_MODEL_AUTO_RETRAIN=true
ML_PREDICTION_CACHE_TTL=300
ML_TRAINING_DATA_RETENTION=90d
ML_MODEL_ACCURACY_THRESHOLD=0.85

# =============================================================================
# ‚ö° PERFORMANCE & CACHING
# =============================================================================
ENABLE_CACHING=true
CACHE_DEFAULT_TTL=3600
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=1000
CONNECTION_POOL_SIZE=10

# =============================================================================
# üåê API & DOCKER PORTS
# =============================================================================
UI_PORT=8080
CORE_PORT=3000
API_BASE_URL=http://localhost:3000
UI_BASE_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
